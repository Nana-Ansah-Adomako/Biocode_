import matplotlib.pyplot as plt


genome = ""

def Skew(genome):
    Skew = {}

    Skew[0] = 0
    for i in range(1, len(genome)+1):
        if genome[i - 1] == "G":
            Skew[i] = Skew[i - 1] + 1
        elif genome[i - 1] == "C":
            Skew[i] = Skew[i - 1] - 1
        else:
            Skew[i] = Skew[i-1]
    return Skew
print(Skew(genome))
x= Skew(genome).keys()
y= Skew(genome).values()
plt.figure (figsize=(12,8))
plt.plot(x,y, linewidth= (1))
plt.xlabel("Genome Position")
plt.ylabel('GC_Counts')
plt.show()
